{
  "builders": [
    {
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "headless": false,
      "guest_os_type": "Ubuntu_64",
      "disk_size": 40960,
      "iso_urls": [
        "./iso/elementaryos-0.4.1-stable.20170814.iso",
        "https://fra1.dl.elementary.io/download/MTUxMTQzNjM0OA==/elementaryos-0.4.1-stable.20170814.iso"
      ],
      "iso_checksum": "a2a71ddeb3d31945eb0fc1afd7bfc14f",
      "iso_checksum_type": "md5",
      "boot_command": [
        "<esc><esc><esc><wait><enter><wait>",
        "/casper/vmlinuz",
        " hostname={{ .Name }}",
        " boot=casper",
        " auto=true",
        " priority=critical",
        " automatic-ubiquity debug-ubiquity",
        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " initrd=/casper/initrd.lz noprompt --",
        "<wait><enter><wait>"
      ],
      "boot_wait": "5s",
      "http_directory": "http",
      "guest_additions_mode": "upload",
      "guest_additions_path": "/home/vagrant/VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "1800s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now"
    }
  ],
  "post-processors": [
    {
      "output": "build/elementaryos-0.4.1-amd64.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}

